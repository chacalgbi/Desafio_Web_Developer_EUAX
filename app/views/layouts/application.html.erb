<!DOCTYPE html>
<html>
  <head>
    <title>Projetos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand"   >Grupo EUAX</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to "Home", inicio_path, class:"nav-link", role:"button" %>
            </li>
            <li class="nav-item">
              <%= link_to "Projetos", projects_path, class:"nav-link", role:"button" %>
            </li>
            <li class="nav-item">
              <%= link_to "Atividades", activities_path, class:"nav-link", role:"button" %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Listagens</a>
            </li>
          </ul>
        </div>
      </nav>
      <br>

      <%= yield %>

    </div>
  </body>
</html>
