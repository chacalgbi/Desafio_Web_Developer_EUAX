<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header"><%= t('labels.admins_list') %></h1>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
	  <thead>
	    <tr>
	      <th scope="col">ID</th>
	      <th scope="col">Email</th>
	      <th scope="col"><%= t('links.edit') %></th>
	      <th scope="col"><%= t('links.delete') %></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @admins.each do |admin| %>
		    <tr>
		      <th scope="row"><%= admin.id %></th>
		      <td><%= admin.email %></td>
		      <td style="width: 100px">
		      	<%= link_to t('links.edit'), edit_admin_path(admin.id), class:"btn btn-primary btn-circle" %>
		      </td>
		      <td style="width: 100px">
		      	<%= link_to t('links.delete'), admins_path, class:"btn btn-danger btn-circle" %>
		      </td>
		    </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
