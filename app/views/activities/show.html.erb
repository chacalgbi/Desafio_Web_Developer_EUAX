<form>
  <div class="form-group">
    <strong>Description:</strong>
    <%= text_field_tag nil, @activity.description, class:"form-control", disabled: true %>
  </div>
  <div class="form-group">
    <strong>Start date:</strong>
    <%= text_field_tag nil, l(@activity.start_date), class:"form-control", disabled: true %>
  </div>
  <div class="form-group">
    <strong>End date:</strong>
    <%= text_field_tag nil, l(@activity.end_date), class:"form-control", disabled: true %>
  </div>
  <div class="form-group">
    <strong>Finalizado:</strong>
    <%= text_field_tag nil, @activity.finished, class:"form-control", disabled: true %>
  </div>
  <div class="form-group">
    <strong>Project:</strong>
    <%= text_field_tag nil, @activity.project.description, class:"form-control", disabled: true %>
  </div>
<form>

